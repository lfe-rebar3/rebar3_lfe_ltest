{erl_opts, []}.

{deps, [
  {lfe, ".*", {git, "https://github.com/rvirding/lfe.git", {tag, "v0.10.1"}}},
  {ltest, ".*", {git, "https://github.com/lfex/ltest.git", {tag, "0.7.1"}}}
  ]}.

{plugins, [
  {'lfe-compile', ".*",
    {git, "https://github.com/lfe-rebar3/compile.git", {tag, "0.2.2"}}}
  ]}.

{provider_hooks, [
  {pre, [{compile, {lfe, compile}}]}
  ]}.
